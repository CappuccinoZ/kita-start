---
import ResourceCard from "./ResourceCard.astro";

import type { Resource } from "../scripts/resource-type";
interface Props {
  resource: Resource;
}
const { resource } = Astro.props;
---

<!-- 网站分类 -->
<div class="resource-panel mb-10">
  <!-- 分类名称 -->
  <h2
    class="text-xl mb-3 text-secondary-content font-semibold text-shadow-sm"
    id={resource.name}
  >
    {resource.name}
  </h2>

  <!-- 网站卡片列表 -->
  <ul
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-3"
  >
    {
      resource.sites.map((site) => (
        <li class="animate-jump">
          <ResourceCard site={site} />
        </li>
      ))
    }
  </ul>
</div>
